{{#with video}}
<div id="videos-container" class="contents-container">
    <div class="video-card">
        <div class="video-title">
            <h1>{{title}}</h1>
        </div>        
        <iframe class="video-player" src="{{videoUrl}}" frameborder="0" allowfullscreen></iframe>
        <div class="video-description">
            <p>{{description}}</p>
        </div>
    </div>
</div>
{{/with}}
<form id="video-form" action="/videos/{{video._id}}/deletions" method="post">
    <a id="back-link" class="back-button" href="/">
        <p>Back</p>
    </a>
    <a href="/videos/{{video._id}}/edit" class="button submit-button edit-video-button" id="edit-button">
        <p>Edit</p>
    </a>
    <button class="button submit-button delete-video-button" id="delete-button">
        <p>Delete</p>
    </button>
</form>
