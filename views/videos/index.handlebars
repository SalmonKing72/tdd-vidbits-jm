<div id="videos-container" class="contents-container">
    {{#each videos as |video|}}
    <div class="video-card">
        <div class="video-title">
            <a href="/videos/{{video._id}}">{{video.title}}</a>
        </div>
        <div class="video-description">
            {{video.description}}
        </div>
        <iframe class="video-player" src="{{video.videoUrl}}" frameborder="0" allowfullscreen></iframe>
    </div>
    {{/each}}
</div>
<a id="create-video-link" class="add-video-button" href="/videos/create">Add a Video</a>
